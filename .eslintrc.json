{
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 2017
    },

    "env": {
        "es6": true,
        "browser": true
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}